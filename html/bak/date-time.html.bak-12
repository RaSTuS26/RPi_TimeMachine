<body>
<center>
<h1><span id="currentTime" padding="0" margin="0"></span></h1>
<h2><span id="currentDate" padding="0" margin="0"></span></h2>

<!-- NOW COMBINED TIME/DATE SCRIPTS, FOR OLD SEPARATE METHOD SEE '.bak/date-time-10.html.bak-07' -->
<script>
function updateTime(){
  var now = new Date();
<!-- Current Time -->
  var time = new Intl.DateTimeFormat('default', {hourCycle:'h12', hour:'2-digit', minute:'2-digit'}).format(now);
  document.getElementById("currentTime").innerHTML = time;

<!-- Current Date -->
<!--  var days = ['Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday'];  -->
  var days = ['Sun', 'Mon', 'Tue', 'Wed', 'Thur', 'Fri', 'Sat'];

  var date = days[now.getDay()] + ', '
             + ('0' + now.getDate()).slice(-2) + '-'
             + ('0' + (now.getMonth()+1)).slice(-2) + '-'
             + now.getFullYear();
  document.getElementById("currentDate").innerHTML = date;
}
<!-- UPDATE EVERY SECOND -->
setInterval(updateTime, 1000);
</script>

</center>
</body>
